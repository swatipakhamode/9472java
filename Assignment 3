class Main {
 public static void main(String[] args) {
 
 // create variables
 int a = 4;
 
 int var;
 // assign value using =
 var = a;
 System.out.println("var using =: " + var);
 // assign value using =+
 var += a;
 System.out.println("var using +=: " + var);
 // assign value using =*
 var *= a;
 System.out.println("var using *=: " + var);
 }
}
Output
var using =: 4
var using +=: 8
var using *=: 32
